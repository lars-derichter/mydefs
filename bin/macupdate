#!/usr/bin/env bash

# Ask for the administrator password upfront.
sudo -v

# Keep-alive: update existing `sudo` time stamp until this script has finished.
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# System
sudo softwareupdate -i -a

# Homebrew
brew update
brew upgrade --cleanup
brew cleanup

# Casks
brew cu --cleanup --force --yes

# Appstore apps
mas upgrade

# Nodejs
if [ -f $(brew --prefix)/opt/nvm/nvm.sh ]; then
  export NVM_DIR="$HOME/.nvm";
  . "/usr/local/opt/nvm/nvm.sh";
  nvm install --lts node;
  nvm cache clear;
fi
npm -g update npm
npm -g update
npm cache clean --force

# Ruby
ruby-install --no-reinstall --cleanup ruby
gem update --system --no-document --clear-sources
gem update --no-document --clear-sources
gem clean

# Atom packages
apm upgrade --compatible --confirm false
